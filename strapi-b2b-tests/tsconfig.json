{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "moduleResolution": "node",
    "types": ["jest", "node"]
  },
  "include": [
    "tests/**/*.js",
    "tests/**/*.ts",
    "tests/**/*.json"
  ],
  "exclude": ["node_modules", "dist"]
}
